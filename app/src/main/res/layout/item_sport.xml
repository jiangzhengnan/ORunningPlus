<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="2dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/icon_green_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">


            <TextView
                android:id="@+id/tv_sport_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="02-10 08:40"
                android:textColor="@color/white_date_text_color" />


            <TextView
                android:id="@+id/tv_sport_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Running"
                android:textColor="@color/red_heart_color" />

            <TextView
                android:id="@+id/tv_sport_distace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sport_model"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:text="7.99"
                android:textColor="@color/white_date_text_color"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/tv_sport_distace"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tv_sport_distace"
                android:layout_toRightOf="@+id/tv_sport_distace"
                android:text="@string/sport_unit_km"
                android:textColor="@color/white_date_text_color"
                android:textSize="10sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_sport_distace"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_sport_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/today_time"
                    android:drawablePadding="5dp"
                    android:text="--:--:--"
                    android:textColor="@color/white_date_text_color"

                    />

                <TextView
                    android:id="@+id/tv_sport_pace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/sport_pace"
                    android:drawablePadding="5dp"
                    android:text="--:--:--"
                    android:textColor="@color/white_date_text_color"

                    />

                <TextView
                    android:id="@+id/tv_sport_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/today_calories"
                    android:drawablePadding="5dp"
                    android:text="--:--:--"
                    android:textColor="@color/white_date_text_color"

                    />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>





</androidx.cardview.widget.CardView>