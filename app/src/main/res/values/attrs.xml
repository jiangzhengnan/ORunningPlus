<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主题配置颜色属性-->
    <attr name="colorAppBg" format="reference|color" />
    <attr name="colorTabBg" format="reference|color" />
    <attr name="colorDateBg" format="reference|color" />
    <attr name="colorDateText" format="reference|color" />

    <declare-styleable name="DiscreteScrollView">
        <attr name="dsv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ArcProgress">
        <attr name="borderWidth" format="dimension"></attr>
        <attr name="unprogresColor" format="color"></attr>
        <attr name="progressColor" format="color"></attr>
        <attr name="tickWidth" format="dimension"></attr>
        <attr name="tickDensity" format="integer"></attr>
        <attr name="bgShow" format="boolean"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="arcbgColor" format="color"></attr>
        <attr name="degree" format="integer"></attr>
        <attr name="arcCapRound" format="boolean"></attr>
        <attr name="currStep" format="float"></attr>
        <attr name="progressStyle" format="enum">
            <enum name="tick" value="1"></enum>
            <enum name="arc" value="0"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>


    <declare-styleable name="DateSelectView">
        <!--时间选择试图的显示类型-->
        <attr name="timeModel" format="integer" />
    </declare-styleable>

    <declare-styleable name="ProgressCircle">
        <attr name="mpc_percent" format="float" />
        <attr name="mpc_stroke_width" format="dimension" />
        <attr name="mpc_start_color" format="color" />
        <attr name="mpc_end_color" format="color" />
        <!-- 背景环的颜色 -->
        <attr name="mpc_default_color" format="color" />
        <!-- 圆弧: 结尾是否覆盖开始 -->
        <attr name="mpc_foot_over_head" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="pb_percent" format="float" />
        <attr name="pb_fill_color" format="color" />
        <attr name="pb_background_color" format="color" />
        <attr name="pb_flat" format="boolean" />
        <attr name="pb_show_text" format="boolean" />
    </declare-styleable>
</resources>